@{
    ViewBag.Title = "Login";
}
<html lang="en">
<body  class="login-page">
    <div class="login-container">
        <div class="login-left">
            <div>
                <h2 class="title">Welcome Back!</h2>
                <p class="sub-title">Enter your username and password to log in</p>
            </div>
            <form method="post" action="@Url.Action("Login", "User")">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="example@example.com" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Your password" required>
                </div>
                <div>
                    <input type="checkbox" id="remember-me" name="remember-me">
                    <label for="remember-me">Remember me</label>
                </div>
                <button type="submit" class="btn-login">Log In</button>
                <div class="inline-links">
                    <p class="inline-links__text">Don’t have an account yet? <a href="@Url.Action("Register", "User")" class="inline-links__signup">Register</a></p>
                    <a href="@Url.Action("ForgotPassword", "User")" class="inline-links__forgot-password">Forgot your password?</a>
                </div>
            </form>
        </div>
        <div class="login-right">
            <div class="widget-image">
                <img src="~/Content/images/CashMoney.jpeg" alt="Widget graphic">
            </div>
        </div>
    </div>
</body>
</html>



